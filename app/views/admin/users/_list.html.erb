<h2>ユーザー一覧</h2>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">登録日時</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
<% @user.each do |user| %>
  <% next if user.email == 'guest@example.com' %>
  <tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.created_at.strftime('%Y/%m/%d') %>登録</td>
  <td><%= link_to "アカウントを削除する", admin_user_path(user.id), class:"btn btn-danger py-0", method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>