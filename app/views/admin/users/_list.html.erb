
  <% @user.each do |user| %>
    <% next if user.email == 'guest@example.com' %>
      <div class="row mb-3">
        <div class="col offset-md-1">
          <i class="h5 fas fa-user-check"></i><%= link_to user.name, admin_user_path(user.id) %>
        </div>
        <div class="col">
          <%= user.email %>
        </div>
        <div class="col">
          <%= user.created_at.strftime('%Y/%m/%d') %>登録
        </div>
        <div class="col">
          <%= link_to "編集する", edit_admin_user_path(user.id), class:"btn btn-success py-0" %>
          <%= link_to "削除する", admin_user_path(user.id), class:"btn btn-danger py-0", method: :delete %>
        </div>
      </div>
  <% end %>