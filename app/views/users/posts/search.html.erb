<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>introduction</th>
      <th>投稿画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.introduction %></td>
        <td>
            <% if post.image.attached? %>
              <%= image_tag post.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
        </td>
        <td><%= link_to 'Show', users_post_path(post.id) %></td>
        <td><%= link_to 'Edit', edit_users_post_path(post.id) %></td>
        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
