show

<h2>タイトル</h2>
<p><%= @post.name %></p>

<h2>本文</h2>
<p><%= @post.introduction %></p>

<%= link_to "編集", edit_users_post_path(@post.id) %>

<% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to users_post_favorite_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to users_post_favorite_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
<% end %>