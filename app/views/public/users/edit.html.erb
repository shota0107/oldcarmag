<h1>編集画面</h1>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

  <h4>名前</h4>
  <%= f.text_field :name %>

  <%= f.submit '保存' %>

<% end %>

<%= link_to "アカウントの削除", user_path(@user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<%= link_to "マイページへ", user_path(@user.id) %>
