
<h1>新規投稿</h1>
<div class="row">
<div class="offset-sm-3 col-sm-6">
<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :name %>

  <h4>本文</h4>
  <%= f.text_area :introduction %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
   <% end %>
 </div>

  <%= f.submit '投稿' %>
<% end %>
</div>
</div>

