show


<div class="row">
<div class="offset-md-4 col-md-6">
    <h2>タイトル</h2>
<p><%= @post.name %></p>


<h2>本文</h2>
<p><%= @post.introduction %></p>

<h2>投稿写真</h2>
  <% if @post.image.attached? %>
    <%= image_tag @post.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>

  <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>

<p><%= link_to "#{@post.comments.count} コメント", post_path(@post.id) %></p>
<% if @post.user == current_user %>
<%= link_to "編集", edit_post_path(@post.id), class:"btn btn-success py-0" %>
<%= link_to "削除", post_path(@post.id), class:"btn btn-danger py-0",method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% else %>

<% end %>
<% if admin_signed_in? %>
  ♥<%= @post.favorites.count %> いいね
<% elsif user_signed_in? %>
  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorite_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_favorite_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
<% end %>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "削除", post_comment_path(comment.post, comment), class:"btn btn-danger py-0", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% else %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [ @post, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
</div>
</div>